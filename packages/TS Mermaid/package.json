{
	"name": "@sebsv/ts-mermaid",
	"private": true,
	"version": "1.0.0",
	"type": "module",
	"exports": "./dist/main.js",
	"scripts": {
		"build": "tsc -b && vite build",
		"dev": "storybook dev -p 6006"
	},
	"xo": {
		"prettier": true,
		"extends": "xo-react",
		"rules": {
			"react/react-in-jsx-scope": 0,
			"unicorn/prevent-abbreviations": [
				"error",
				{
					"allowList": {
						"props": true,
						"ref": true
					}
				}
			]
		}
	},
	"dependencies": {
		"mermaid": "^11.4.0",
		"monaco-editor": "^0.52.0",
		"react": "^18.3.1",
		"react-dom": "^18.3.1"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^3.2.2",
		"@storybook/addon-essentials": "^8.4.3",
		"@storybook/addon-interactions": "^8.4.3",
		"@storybook/blocks": "^8.4.3",
		"@storybook/builder-vite": "^8.4.3",
		"@storybook/react": "^8.4.3",
		"@storybook/react-vite": "^8.4.3",
		"@storybook/test": "^8.4.3",
		"@types/react": "^18.3.12",
		"@types/react-dom": "^18.3.1",
		"@vitejs/plugin-react-swc": "^3.5.0",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.37.2",
		"eslint-plugin-react-hooks": "^5.0.0",
		"storybook": "^8.4.3",
		"typescript": "~5.6.2",
		"vite": "^5.4.10",
		"vite-plugin-dts": "^4.3.0"
	}
}
